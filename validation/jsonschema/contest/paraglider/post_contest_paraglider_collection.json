{
    "type":"object",
    "$schema": "http://json-schema.org/draft-03/schema#",
    "title": "New contest paraglider",
    "description": "Add a participant (new pilot) to contest",
    "properties":{
        "person_id": {
            "type": "string",
            "required": true,
            "minLength": 1,
            "description": "Pilot ID from /person resource"
        },
        "glider": {
            "type": "string",
            "required": true,
            "minLength": 1,
            "description": "Paraglider's model"
        },
        "contest_number": {
            "type": "string",
            "required": true,
            "minLength": 1,
            "description": "Unique number denoting the pilot in current contest"
        }
    }
}
